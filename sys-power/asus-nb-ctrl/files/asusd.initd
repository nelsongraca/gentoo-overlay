name="Asus Daemon"
description=""
command=/usr/bin/asusd
command_args="${asusd_args}"
pidfile="/var/run/asusd.pid"

start() {
  ebegin "Starting ${name}"
  start-stop-daemon --start \
    --make-pidfile \
    --background \
    --exec ${command} \
    --stdout /var/log/asusd \
    --stderr /var/log/asusd \
    --pidfile ${pidfile}
  eend $?
}

stop() {
  ebegin "Stopping ${name}"
  start-stop-daemon --stop \
    --pidfile ${pidfile}
  eend $?
}
